<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base night application theme. -->
    <style name="Theme.ReaderForU" parent="Base.Theme.ReaderForU">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_blue_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary_dark</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_blue_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary_dark</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Custom attributes -->
        <item name="bookViewBackgroundColor">@color/book_view_background_dark</item>
        <item name="colorSurfaceContainerHighest">@color/material_dark_grey</item>
        <item name="toolbarIconTint">@color/toolbar_icon_tint_dark</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="dividerColor">@color/divider_dark</item>
        <item name="itemRippleColor">@color/ripple_dark</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_variant_dark</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        
        <!-- Make status bar icons light on dark background -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>
</resources>