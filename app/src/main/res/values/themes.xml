<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ReaderForU" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_variant_light</item>
        <item name="colorOnPrimary">@color/text_on_primary_light</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_blue_light</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_light</item>
        <item name="colorOnSecondary">@color/text_on_secondary_light</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="android:windowBackground">@color/background_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Custom attributes -->
        <item name="bookViewBackgroundColor">@color/book_view_background_light</item>
        <item name="colorOnSurfaceVariant">@color/material_on_surface_variant</item>
        <item name="colorSurfaceContainerHighest">@color/light_grey</item>
        <item name="toolbarIconTint">@color/toolbar_icon_tint_light</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="dividerColor">@color/divider_light</item>
        <item name="itemRippleColor">@color/ripple_light</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_variant_light</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        
        <!-- Make status bar icons dark on light background -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <!-- Final App Theme (inherits from Base) -->
    <style name="Theme.ReaderForU" parent="Base.Theme.ReaderForU">
        <!-- No additional customizations needed - all inherited from base theme -->
    </style>
</resources>